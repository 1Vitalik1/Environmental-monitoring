<Page x:Class="Environmental_monitoring.UiPage.AllUsers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Environmental_monitoring.UiPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AllUsers">
    <Grid>
        <Border CornerRadius="5" Background="#181A24" Padding="3" BorderThickness="1" BorderBrush="#366EC0">
            <Grid>
                <StackPanel>
                    <Label FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center">
                        <Label.Effect>
                            <DropShadowEffect/>
                        </Label.Effect> Все пользователи:</Label>
                    <ListBox x:Name="listBoxAllUsers" Background="#181A24" Foreground="White" BorderThickness="0" Margin="5"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
